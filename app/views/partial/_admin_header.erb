<div class="wrapper">
    <header>

        <nav>

            <div class="menu-icon">
                <i class="fa fa-bars fa-2x"></i>
            </div>

            <div class="logo">
                <%= link_to "Games", root_path %>

            </div>



            <div class="menu">
                <ul>
                    <% if admin_signed_in? %>
                    <li>
                        <%= link_to "ゲーム追加", new_admins_game_path %>
                    </li>
                    <li>
                        <%= link_to "ゲーム一覧", admins_games_path %>
                    </li>
                    <li>
                        <%= link_to "投稿一覧", admins_posts_path %>
                    </li>
                    <li>
                        <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
                    </li>
                    <% else %>
                    <li>
                        <%= link_to "会員登録", new_user_registration_path %>
                    </li>
                    <li>
                        <%= link_to "ログイン", new_user_session_path %>
                    </li>
                    <% end %>
                </ul>
            </div>
        </nav>

    </header>
    <div class="main"></div>

</div>

<script type="text/javascript">
    // Menu-toggle button

    $(document).ready(function () {
        $(".menu-icon").on("click", function () {
            $("nav ul").toggleClass("showing");
        });
    });

    // Scrolling Effect

    $(window).on("scroll", function () {
        if ($(window).scrollTop()) {
            $('nav').addClass('black');
        } else {
            $('nav').removeClass('black');
        }
    })
</script>