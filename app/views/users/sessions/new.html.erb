<div class="container mt-5">
  <div class="row">
    <div class="col-lg-7"></div>
    <div class="col-lg-5">
      <h1 class="title_new_display">ログイン</h1>

      <div class="form-group mt-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group mt-4">
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード",  class: "form-control" %>
        </div>
      </div>

      <div class="form-group mt-4">
        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :ログイン状態を保存する %>
        </div>
        <% end %>
      </div>

      <div class="actions">
        <div align="right">
          <%= f.submit "ログイン", class:"btn btn-outline-dark" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>