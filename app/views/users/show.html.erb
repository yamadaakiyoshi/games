<div class="container">
    <div>
        <h1>マイページ</h1>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div align="center">
                <% if current_user.image.present? %>
                <%= image_tag current_user.image.thumb.url,width: "100px", height: "100px" %>
                <% end %>

            </div>
            <div class="name_display">
                <div align="center">
                    <%= @user.nickname %>
                </div>
            </div>



            <%= link_to "編集",edit_user_path(@user.id), class: "btn btn-success edit_btn" %>
            <%= link_to "退会", user_registration_path, method: :delete, class: "btn btn-success edit_btn" %>

            <h2>お気に入り一覧</h2>
            <div class="favorite-list">
                <% if @favorite.count==0 %>
                <h4>現在登録がありません</h4>
                <% else %>
                <% @favorite.each do |f| %>
                <div class="new-list-content">
                    <%= link_to game_path(f.id) do %>
                    <%= image_tag f.image.thumb.url  %>
                    <% end %>
                </div>
                <% end %>
                <% end %>