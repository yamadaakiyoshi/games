<div class="like-link" id="favorite-link-<%= @game.id %>">
    <% if current_user.favorites.find_by(game_id: @game.id) %>
    <%= link_to game_favorite_path(game_id: @game.id), method: :delete, remote: true do %>
    <div class="iine__button">❤️
        <%= @game.favorites.count %>
    </div>
    <% end %>

    <% else %>
    <%= link_to game_unfavorite_path(game_id: @game.id), method: :post, remote: true do %>
    <div class="iine__button">♡️
        <%= @game.favorites.count %>
    </div>
    <% end %>
    <% end %>
</div>
</div>